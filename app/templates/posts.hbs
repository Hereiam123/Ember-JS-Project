<div class="container mx-auto mt-2">
  <div class="{{if this.notClick "no-click"}}">
    {{posts-list clickPost=(action "getPost")}}
  </div>
  <div id="mySidenav" class="sidenav {{if this.showSlideInfo "open"}}">
    <button {{action "hideMenu"}}>
      X
    </button>
    <div>
      <h3>
        {{capitalize currentPost.title}}
      </h3>
      <p>
        {{capitalize currentPost.body}}
      </p>
    </div>
    <br />
    <div>
      <h3>
        This Post Created By:
        {{currentPostUser.name}}
      </h3>
      <p>
        Username:
        {{currentPostUser.username}}
      </p>
      <p>
        Email:
        {{currentPostUser.email}}
      </p>
      <p>
        Address:
        {{currentPostUser.address.street}}
        ,
        {{currentPostUser.address.suite}}
        ,
        {{currentPostUser.address.city}}
        {{currentPostUser.address.zipcode}}
      </p>
      <p>
        Phone:
        {{currentPostUser.phone}}
      </p>
      <p>
        Website:
        {{currentPostUser.website}}
      </p>
      <br />
      <div>
        <h4>
          Company:
        </h4>
        <p>
          Name:
          {{currentPostUser.company.name}}
        </p>
        <p>
          Motto:
          {{currentPostUser.company.catchPhrase}}
        </p>
        <p>
          Objective:
          {{currentPostUser.company.bs}}
        </p>
      </div>
    </div>
  </div>
</div>